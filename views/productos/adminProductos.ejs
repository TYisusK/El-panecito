<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrar Productos</title>
    <link rel="stylesheet" href="/web/css/productos/adminP.css"> <!-- Enlace al archivo CSS -->
    <!-- Incluir FontAwesome para los íconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../templates/header') %>

        <h1>Administrar Productos</h1>

        <!-- Contenedor para todas las tarjetas de producto y la tarjeta de agregar -->
        <div class="producto-container">
            <% productos.forEach(producto=> { %>
                <div class="producto">
                    <h2>
                        <%= producto.nombre %>
                    </h2>
                    <p>
                        <%= producto.descripcion %>
                    </p>
                    <p>Precio: $<%= producto.precio %>
                    </p>
                    <p>Visible: <%= producto.visible ? "Sí" : "No" %>
                    </p>

                    <!-- Carrusel de imágenes -->
                    <div class="carousel">
                        <% producto.fotos.forEach((foto, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="/uploads/productos/<%= foto %>" alt="Foto de <%= producto.nombre %>"
                                    class="carousel-img">
                            </div>
                            <% }); %>
                    </div>

                    <!-- Botones de editar y eliminar como íconos en círculos -->
                    <a href="/producto/editar/<%= producto.id %>" class="edit-btn"><i class="fas fa-edit"></i></a>
                    <a href="/producto/eliminar/<%= producto.id %>" class="delete-btn"
                        onclick="return confirm('¿Seguro que deseas eliminar este producto?')"><i
                            class="fas fa-trash-alt"></i></a>
                </div>
                <% }); %>

                    <!-- Tarjeta para agregar nuevo producto con ícono de panecito -->
                    <a href="/altaProducto" class="add-product-card">
                        <i class="fas fa-bread-slice"></i> <!-- Ícono de panecito -->
                        <p>Agregar Producto</p>
                    </a>
        </div>

        <script src="/web/js/adminP.js"></script> <!-- Enlace al archivo JS -->
</body>

</html>

<%- include('../templates/footer') %>